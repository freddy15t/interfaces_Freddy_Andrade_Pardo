<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.geometry.Point3D?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="650.0" prefWidth="750.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.MenuController">
   <top>
      <MenuBar style="-fx-background-color: #F4FAD2;" BorderPane.alignment="CENTER">
        <menus>
            <Menu mnemonicParsing="false" text="INICIO">
               <items>
                  <MenuItem mnemonicParsing="false" onAction="#Volver" text="Volver" />
               </items></Menu>
            <Menu mnemonicParsing="false" text="IniciarSesion">
               <items>
                  <MenuItem mnemonicParsing="false" onAction="#Entrar" text="Entrar" />
               </items>
            </Menu>
          <Menu mnemonicParsing="false" text="Recursos">
            <items>
                  <MenuItem mnemonicParsing="false" onAction="#abrirFormulario" text="Abrir" />
              <MenuItem mnemonicParsing="false" onAction="#cerrarListado" text="Cerrar" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Formulario">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#Abrir" text="Abrir" />
            </items>
          </Menu>
            <Menu mnemonicParsing="false" text="Tutorial">
               <items>
                  <MenuItem mnemonicParsing="false" onAction="#abrirTutorial" text="abrir" />
               </items>
            </Menu>
            <Menu mnemonicParsing="false" text="Mensjaes">
               <items>
                  <MenuItem mnemonicParsing="false" onAction="#abrirSms" text="abrirSms" />
               </items>
            </Menu>
            <Menu mnemonicParsing="false" text="AñadirEmplados">
               <items>
                  <MenuItem mnemonicParsing="false" onAction="#Añadir" text="Añadir" />
               </items>
            </Menu>
        </menus>
      </MenuBar>
   </top>
   <center>
      <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" style="-fx-background-color: #F8A13E;" BorderPane.alignment="CENTER">
         <children>
            <Label prefHeight="53.0" prefWidth="268.0" text="Peluquería" textFill="#1b3394">
               <font>
                  <Font size="36.0" />
               </font>
               <VBox.margin>
                  <Insets bottom="80.0" left="22.0" />
               </VBox.margin>
            </Label>
            <ImageView fitHeight="600.0" fitWidth="600.0" nodeOrientation="RIGHT_TO_LEFT" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../img/Peluqueria.jpg" />
               </image>
               <rotationAxis>
                  <Point3D x="1.0" z="1.0" />
               </rotationAxis>
            </ImageView>
         </children>
      </VBox>
   </center>
</BorderPane>
